{
  "name": "glerner/floot-palette",
  "description": "Color Palette Generator (utilities and dev tools via Composer)",
  "type": "project",
  "license": "ISC",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "wpreadme2markdown/wp2md": "^3.0 || ^4.0"
  },
  "autoload": {
    "psr-4": {
      "FlootPalette\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "scripts": {
    "readme:build": "vendor/bin/wp2md readme.txt README.md"
  }
}
