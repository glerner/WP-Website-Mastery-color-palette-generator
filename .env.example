# Public runtime configuration (exposed to browser)
# Copy to .env.local and adjust as needed
# Note: Do NOT put secret API keys in NEXT_PUBLIC_* vars; they are exposed client-side.

# Accessibility thresholds
NEXT_PUBLIC_AAA_MIN_CONTRAST=7.05
NEXT_PUBLIC_AA_SMALL_MIN_CONTRAST=4.5

# Target generation
NEXT_PUBLIC_Y_TARGET_DECIMALS=2
NEXT_PUBLIC_Y_DISPLAY_DECIMALS=3
NEXT_PUBLIC_TINT_TARGET_COUNT=10
NEXT_PUBLIC_SHADE_TARGET_COUNT=10

# Tint ranges
NEXT_PUBLIC_LIGHTER_MIN_Y=0.50
NEXT_PUBLIC_LIGHTER_MAX_Y=0.95
NEXT_PUBLIC_LIGHTER_HEADROOM_FROM_MAX=0.10
NEXT_PUBLIC_LIGHT_MIN_Y_BASE=0.30
NEXT_PUBLIC_LIGHT_MAX_Y_CAP=0.90

# Shade ranges
NEXT_PUBLIC_DARKER_MIN_Y=0.02
NEXT_PUBLIC_DARKER_MAX_Y=0.12
NEXT_PUBLIC_DARK_MIN_Y_BASE=0.08
NEXT_PUBLIC_DARK_OVERLAP_MIN_Y=0.08
NEXT_PUBLIC_DARK_MAX_Y=0.20

# Comfort caps (not WCAG rules)
NEXT_PUBLIC_MAX_CONTRAST_TINTS=18
NEXT_PUBLIC_MAX_CONTRAST_SHADES=15
